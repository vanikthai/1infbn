    <button
      type="button"
      id="clearMsg"
      class="btn btn-box-tool"
      data-widget="remove"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="30"
        height="30"
        fill="currentColor"
        class="bi bi-x-circle"
