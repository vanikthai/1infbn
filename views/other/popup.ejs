<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form id="btnSetPass" class="row g-3">
                    <div class="col-auto">
                        <input type="password" autocomplete="off" required class="form-control" id="setPass">
                    </div>
                    <div class="col-auto">
                        <button id="bnset" type="submit" class="btn btn-primary">Set password</button>
                    </div>
                  </form>

                <form>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea disabled class="form-control" id="message-text"></textarea>
                    </div>
                    <div class="mb-3">
                        <button type="button" id="copylink" class="btn btn-secondary btn-sm">Copy Link</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>